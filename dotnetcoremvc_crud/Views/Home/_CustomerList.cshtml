@model IEnumerable<dotnetcoremvc_crud.Model.Customer>

@{
    ViewData["Title"] = "_CalcItemList";
}

<div class="m-t-15">
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="bg-success">
                    <tr>
                        <th scope="col" class="font-weight-bold text-white">Name</th>
                        <th scope="col" class="font-weight-bold text-white">Country</th>
                        <th scope="col" class="text-right font-weight-bold text-white">City</th>
                        <th scope="col" class="font-weight-bold text-white">Phone no</th>
                        <th scope="col" class="font-weight-bold text-white">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Country</td>
                            <td>@item.City</td>
                            <td>@item.PhoneNo</td>
                            <td colspan="3">
                                <button class="btn btn-success btn-xs text-center rounded-pill m-r-5" onclick="EidtItem(this)" data-id="@item.Id">Eidt</button>
                                <button class="btn btn-danger btn-xs text-center rounded-pill m-r-5" onclick="DeleteItem(@item.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
    else
    {
        <div class="col-md-12 text-center">
            <br />
            <h4 class="text-bold">ကုန်ကျစရိတ် အသစ် မရှိသေးပါ။</h4>
            <br />
        </div>
    }
</div>